<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.puerto.libre.shopial.views.LinkNetwork"
    tools:showIn="@layout/activity_link_network">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_instagram"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/background_instagram"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="6dp"
                android:contentDescription="@string/aceptar"
                android:layout_gravity="center|left"
                android:src="@drawable/instagram"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <View
                android:background="@color/transparent"
                android:layout_marginLeft="12dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lbl_instagram"
                android:layout_marginLeft="12dp"
                android:text="@string/instagram_link"
                android:textSize="28sp"
                android:gravity="center|left"
                android:textColor="@color/title_text"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/load_instagram"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="@color/title_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_facebook"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/background_facebook"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="6dp"
                android:contentDescription="@string/aceptar"
                android:layout_gravity="center|left"
                android:src="@drawable/facebook"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <View
                android:background="@color/transparent"
                android:layout_marginLeft="12dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lbl_facebook"
                android:layout_marginLeft="12dp"
                android:text="@string/facebook_link"
                android:textSize="28sp"
                android:gravity="center|left"
                android:textColor="@color/title_text"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/load_facebook"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="@color/title_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_google"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/background_google"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="6dp"
                android:contentDescription="@string/aceptar"
                android:layout_gravity="center|left"
                android:src="@drawable/google"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <View
                android:background="@color/transparent"
                android:layout_marginLeft="12dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lbl_google"
                android:layout_marginLeft="12dp"
                android:text="@string/google_link"
                android:textSize="28sp"
                android:gravity="center|left"
                android:textColor="@color/title_text"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/load_google"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="@color/title_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_twitter"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/background_twitter"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="6dp"
                android:contentDescription="@string/aceptar"
                android:layout_gravity="center|left"
                android:src="@drawable/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <View
                android:background="@color/transparent"
                android:layout_marginLeft="12dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lbl_twitter"
                android:layout_marginLeft="12dp"
                android:text="@string/twitter_link"
                android:textSize="28sp"
                android:gravity="center|left"
                android:textColor="@color/title_text"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/load_twitter"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="@color/title_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_pinterest"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:background="@drawable/background_pinterest"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="6dp"
                android:contentDescription="@string/aceptar"
                android:layout_gravity="center|left"
                android:src="@drawable/pinterest"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <View
                android:background="@color/transparent"
                android:layout_marginLeft="12dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/lbl_pinterest"
                android:layout_marginLeft="12dp"
                android:text="@string/pinterest_link"
                android:textSize="28sp"
                android:gravity="center|left"
                android:textColor="@color/title_text"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/load_pinterest"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:visibility="invisible"
                app:indicator="BallScaleMultiple"
                app:indicator_color="@color/title_text"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/but_link_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/but_link_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/but_link_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
