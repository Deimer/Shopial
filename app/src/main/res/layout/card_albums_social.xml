<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_album"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|left"
            android:src="@drawable/album_mini_white_back"/>
        <TextView
            android:id="@+id/lbl_name_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/img_item"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/lbl_date_album"
            android:layout_below="@+id/lbl_name_album"
            android:layout_alignLeft="@+id/lbl_name_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/lbl_id_album"
            android:visibility="gone"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:textSize="18sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>